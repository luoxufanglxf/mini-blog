extends ../layout

append css
  link(rel="stylesheet", href="/css/user.css")
block content
  .user-bg2
    h1 注册
  form.form-signin.form-register(method="post", action="/admin/users/register")
    h2.form-signin-heading
      i.fa.fa-user
    != messages()

    label.sr-only(for="myname") 用户名
    input.myname.form-control(name="myname",type="text", placeholder="请输入用户名...", required="", autofocus="")

    label.sr-only(for="password") 密码
    input.password.form-control(name="password",type="password", placeholder="请输入密码...", required="", autofocus="")

    button.btn.btn-lg.btn-primary.btn-block(type="submit") 注册
